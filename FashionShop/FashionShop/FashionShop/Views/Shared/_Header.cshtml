@model FashionShop.ViewModels.HeaderViewModel
@{
    var actionUrl = Url.Action("Index", "Products");
    var producttype = HttpContext.Current.Request.QueryString["producttype"];
    var keyword = HttpContext.Current.Request.QueryString["keyword"];
   
    }

<header>
    <nav id="navtop" class="navbar navbar-default ">
        <div>
            <div class=" navbar-header">
                <a href=@Url.Action("Index", "Home") class="navbar-brand active"><img id="logo" src="/Content/img/cropted.png"/></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class=" nav navbar-nav nav_center">
                    <li>@Html.ActionLink("Men", "Index", "Products", new {producttype = "Men"}, null) </li>
                    <li>@Html.ActionLink("Women", "Index", "Products", new {producttype = "Women"}, null) </li>
                    <li>@Html.ActionLink("Kid", "Index", "Products", new {producttype = "Kid"}, null) </li>
                    <li>@Html.ActionLink("Sports", "Index", "Products", new {producttype = "Sports"}, null) </li>
                    <li>@Html.ActionLink("Accessories", "Index", "Products", new {producttype = "Asscesories"}, null) </li>
                </ul>
                <ul class="nav navbar-nav navbar-right nav_right">
                    <li>
                        <form class="navbar-form" method="get" action="@actionUrl">
                            <div class="input-group">
                                @if(!string.IsNullOrEmpty(producttype))
                                {
                                        <input type="text" class="form-control" style="display: none;" placeholder="Search" name="producttype" value="@producttype">
                                }
                                <input type="text" class="form-control" placeholder="Search" name="keyword" value="@keyword">

                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit" value="Search">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </li>
                    <li id="login"><a href="Login.html"><span class="glyphicon glyphicon-user"></span></a></li>
                    <li id="bag1"><a href="@Url.Action("Index", "Cart")"><span class="glyphicon glyphicon-shopping-cart" id="global-cart-total-count"> Cart(@Model.CartTotal.TotalQuantity)-@Model.CartTotal.TotalMoney d </span></a></li>
                </ul>
            </div>

        </div>
    </nav>
</header>